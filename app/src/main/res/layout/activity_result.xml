<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg_2"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        app:cardCornerRadius="20dp"
        android:layout_margin="15sp"
        >

        <TextView
            android:id="@+id/textView"
            android:text="KẾT QUẢ TÍNH LÃI"
            style="@style/title_bar"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:text="Tổng tiền gửi:"
        style="@style/editText"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"/>

    <TextView
        android:id="@+id/tongTienGui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:text="Kỳ hạn gửi:"
        style="@style/editText"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"/>

    <TextView
        android:id="@+id/kyhanGui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:text="Lãi nhận được hàng tháng:"
        style="@style/editText"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"/>

    <TextView
        android:id="@+id/LaiNhanDuocHangThang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:text="Tổng lại nhận được:"
        style="@style/editText"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"/>

    <TextView
        android:id="@+id/TongLai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnQuayLai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:text="Quay lại"
        android:minHeight="48dp"/>

</LinearLayout>
